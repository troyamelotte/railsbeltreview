<h1>Edit event</h1>
<a href="/logout">Logout</a>
<a href="/events/index">Home</a>
<form action="/events/update/<%=@event.id%>" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  Name <input type="text" name="event[name]" value="<%=@event.name%>">
  Date <input type="date" name="event[date]" value="<%=@event.date%>">
  Location <input type="text" name="event[location]" value="<%=@event.location%>">
  <select name="event[state]">
    <option value="CA">CA</option>
    <option value="AZ">AZ</option>
    <option value="NV">NV</option>
  </select>
  <input type="submit" value="Update Event">
</form>
